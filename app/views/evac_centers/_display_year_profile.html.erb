      <div class="col-md-6 col-sm-12">
        <div class="row">
          <div class="col-md-9">
            <h1 class="oswald fw" >EVACUEES OVERVIEW</h1>
          </div>
          <% if session[:user_type] == "ADMIN"%>
            <div class="col">
              <%= link_to "Log Evacuee", "#{evac_center.id}/log", class: "btn btn-outline-danger w-100 oswald fw-bold" %>
            </div>
          <% else %>
            <% if User.find(session[:user_id]).currently_assigned != nil%>
              <% if User.find(session[:user_id]).currently_assigned == evac_center.id %>
                <div class="col">
                  <%= link_to "Log Evacuee", "#{evac_center.id}/log", class: "btn btn-outline-danger w-100 oswald fw-bold" %>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <div class="row">
          <div class="col" style="border-right: 2px solid black;">
            <div class="row">
              <div class="col-md-5">
                <p class="h4 oswald fw" align="right">MALE: </p>
              </div>
              <div class="col">
                <p class="h2 oswald fw"><%= countGenderEvacuated(evac_center.id, "Male") %></p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-5">
                <p class="h4 oswald fw" align="right">FEMALES: </p>
              </div>
              <div class="col">
                <p class="h2 oswald fw"><%= countGenderEvacuated(evac_center.id, "Female") %></p>
              </div>
            </div>
            <div class="row">
              <div class="col-md-5">
                <p class="h4 oswald fw" align="right">TOTAL: </p>
              </div>
              <div class="col">
                <p class="h2 oswald fw"><%= countIndivEvacuated(evac_center.id)%></p>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="row">
              <div class="col-md-5">
                <p class="h4 oswald fw" align="right">FAMILIES: </p>
              </div>
              <div class="col">
                <p class="h2 oswald fw"><%= countEvacuated(evac_center.id) %></p>
              </div>
            </div>
          </div>
        </div>

        <a href="<%=evac_center.id%>/evacuated" class="btn btn-dark w-100 oswald fw-bold mt-4" style="background: #004d80;">View Evacuees</a>
