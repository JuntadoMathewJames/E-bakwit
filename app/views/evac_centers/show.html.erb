            <div class="col">
              <p class="h2 oswald fw">YES</p>
            </div>
          <% else %>
            <div class="col">
              <p class="h2 oswald fw">NO</p>
            </div>
          <% end%>
        </div>
        <div class="row">
          <div class="col-md-3">
            <p class="h4 oswald fw" align="right">Capacity: </p>
          </div>
          <div class="col">
            <p class="h2 oswald fw"><%= @evac_center.capacity %></p>
