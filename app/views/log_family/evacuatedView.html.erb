<%= link_to "/evac_centers", class: 'ms-5 mt-3 mb-2 btn btn-outline-dark oswald fs-4 text-decoration-none' do %>
  <i class="fa-solid fa-left-long"></i> Back
<% end %>
<div class = "row">
  <div class = "col-md-6">
    <h3 style = "float:right;">Search Family: </h3>
  </div>
  <div class = "col-md-3">
    <%= form_with url: "/view_evacuated_family", method: :post do |form| %>
      <%= form.collection_select :evacuee_id , @evacuee_list, :id, :family_name ,{:prompt => "SELECT EVACUEE"},{ class:"form-control", oninput: "this.form.requestSubmit()"}%>
    <% end %>
  </div>
</div>
<br>
<div id="evacuated-list" align="center">
  <div class="montserrat fw-bold col-10">
    <table class="table table-responsive table-sm table-hover ">
      <thead class="table-dark">
        <th class="p-2">Last Name</th>
        <th class="p-2">First Name</th>
        <th class="p-2">Age</th>
        <th class="p-2">Sex</th>
        <th class="text-center p-2">Parent</th>
        <th class="text-center p-2">Pregnant</th>
        <th class="text-center p-2">Breastfeeding</th>
        <th class="text-center p-2">PWD</th>
        <th class="text-center p-2">STATUS</th>
        <th class="text-center p-2">ACTION</th>
      </thead>
    </table>
  </div>
</div>
